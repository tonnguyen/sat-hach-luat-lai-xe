						android:layout_width="wrap_content" 
						android:layout_height="wrap_content">
				<RadioButton android:id="@+id/exam_radioAnswer1" 
					style="@style/ExamAnswerButton"
					android:paddingLeft="2sp"
					android:paddingRight="2sp"
					android:drawableTop="@drawable/exam_radio_button1" />
