<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
	<!-- Action bar -->
	<LinearLayout android:layout_width="fill_parent" android:id="@+id/exam_titleBarContainer"
		android:layout_height="@dimen/title_height" 
		android:background="@drawable/startup_title_bar_background" android:orientation="horizontal">
		<TextView android:id="@+id/exam_titleBar_QuestionNavigation" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:text="15/30" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="fill_parent" 
			android:src="@drawable/title_icon"
			android:layout_gravity="center" />
		<TextView android:id="@+id/exam_titleBar_RemainingTime" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:text="12:45" />
	</LinearLayout>
    
    <!-- Grid -->
	<LinearLayout
		android:id="@+id/exam_gridContainer"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/startup_grid_background"
        android:padding="5dip">
        <!-- First row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <WebView android:id="@+id/exam_QuestionView" 
            	android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
    </LinearLayout>
    
    <LinearLayout
	        android:id="@+id/exam_ButtonContainer"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center">
		<RadioGroup android:id="@+id/exam_radioGroup" android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<RadioButton android:id="@+id/exam_radioAnswer1" android:button="@null"
					android:layout_width="wrap_content" android:layout_height="43sp"
					android:text="" android:background="@null" android:drawableTop="@drawable/exam_radio_button1" />
				<RadioButton android:id="@+id/exam_radioAnswer2" android:button="@null"
					android:layout_width="wrap_content" android:layout_height="43sp"
					android:text="" android:background="@null" android:drawableTop="@drawable/exam_radio_button2" />
				<RadioButton android:id="@+id/exam_radioAnswer3" android:button="@null"
					android:layout_width="wrap_content" android:layout_height="43sp"
					android:text="" android:background="@null" android:drawableTop="@drawable/exam_radio_button3" />
				<RadioButton android:id="@+id/exam_radioAnswer4" android:button="@null"
					android:layout_width="wrap_content" android:layout_height="43sp"
					android:text="" android:background="@null" android:drawableTop="@drawable/exam_radio_button4" />
			</RadioGroup>
			<Button android:id="@+id/exam_buttonPrevious" android:layout_weight="1"
				android:layout_width="wrap_content" android:layout_height="43sp"
				android:text="" android:background="@null" android:drawableTop="@drawable/exam_back_button" />
			<Button android:id="@+id/exam_buttonNext" android:layout_weight="1"
				android:layout_width="wrap_content" android:layout_height="43sp"
				android:text="" android:background="@null" android:drawableTop="@drawable/exam_next_button" />
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
