<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleBarContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/startup_title_bar_background</item>
    </style>
    <style name="TitleBarLogo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/title_icon</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TitleBar_QuestionInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:text">"15/30"</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingTop">14sp</item>
    </style>
    <style name="TitleBar_QuestionNavigationContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">3sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">3sp</item>
        <item name="android:layout_weight">1</item>
    </style>
	<style name="TitleBar_QuestionNavigationRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TitleBar_RemainingTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:text">"12:45"</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingTop">14sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    <style name="ExamAnswerButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">43sp</item>
        <item name="android:text">""</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ExamNavigationButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">43sp</item>
        <item name="android:text">""</item>
        <item name="android:background">@null</item>
    </style>
    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/startup_btn_text</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="ExamQuestionNavigationButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">2sp</item>
        <item name="android:background">@color/titleBar_answered_question</item>
    </style>
    
    <style name="QuickActionRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="QuickActionButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/quickcontact_slider_btn</item>
    </style>
    
    <style name="HelpScreenText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    
    <!-- Start of Action menu styles  -->
    <style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
    <!-- End of Action menu styles -->
</resources>
